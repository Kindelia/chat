{
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true,
},
"editor.formatOnSave": false,
"editor.formatOnPaste": true,
"javascript.format.enable": false,
"eslint.packageManager": "yarn",
  "eslint.validate": ["javascript"],
  "files.exclude": {
    "**/.yarn": false,
    "**/.next": false,
    "**/.turbo": false,
    "**/.netlify": false,
    "**/*.lock": false,
    "**/node_modules": false,
    "**/package.json": false,
    "turbo.json": false,
    ".vscode": false,
    ".husky": false,
    ".github": false,
    ".eslintignore": false,
    "**/.eslintrc.js": false,
    "**/.eslintrc.json": false,
    ".prettierrc.js": false,
    ".prettierignore": false,
    ".yarnrc": false,
    "**/.gitignore": false,
    "apps/**/postcss.config.js": false,
    "apps/**/tailwind.config.js": false,
    "apps/**/tsconfig.json": false,
    "packages/**/tsconfig.json": false,
    "apps/**/.env*": false,
    "packages/**/.env*": false
  },
  "files.insertFinalNewline": true
}
